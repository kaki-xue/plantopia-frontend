/* pages/chatroom/chatroom.wxss */

.avatar-large {
  width: 56px;
  height:56px;
  border-radius: 50%;
}


.chatroom-space {
  margin-bottom:300px;
}

.plant-avatar {
display:flex;
justify-content:center;
width:100vw;
padding:10px;
border-bottom: 1px rgb(197, 197, 197) solid;
border-top: none;
}

.chatroom {
  height:530px;  
  }

.btn-user {
  color: #4A4A4A;
  border: 1px solid #4A4A4A;
  padding: 8px 24px;
  border-radius: 50px;
  /* font-weight: light; */
  opacity: 0.6;
  transition: opacity 0.3s ease;
  margin:15px;
  width:60%;
  text-align: right;
  float:right;
}
.btn-plant {
  color: white;
  padding: 8px 24px;
  background: #1EDD88;
  transition: background 0.3s ease;
  margin:15px;
  border-radius: 50px;
  width:60%;
  display:inline-block;
}

.msg-button {
  display:flex;
  justify-content: space-evenly;
  margin:10px;
  position:fixed;
  bottom:0;
  left: 0;
  right: 0;
  overflow: visible;
}
.btn-flat {
  color: black;
  padding: 8px 24px;
  border-radius: 15px;
  background:white;
  border:solid;
  border-color:#1CE2A7;
  transition: background 0.3s ease;
  width:130px;
  text-align: center;
}
.fas {
  color:#4A4A4A;
  font-size:25px;
}