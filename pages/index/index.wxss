/**index.wxss**/
.plant-text {
  margin:10px;
  max-width: 88%;
  word-wrap: break-word;
  text-align: center;
}
.my-plant {
  display:flex;
  justify-content: center;
  width:100vw;
  position:sticky;
  bottom:0;
}
.btn-flat {
  color: black;
  padding: 8px 24px;
  border-radius: 15px;
  background:white;
  transition: background 0.3s ease;
  width:130px;
  text-align: center;


}
.fas {
  color:#4A4A4A;
  font-size:25px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.card-category {
  background-size: cover;
  background-position: center;
  height: 400px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 40px;
  font-weight: bold;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
  border-radius: 0px;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
}
.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result .weui-cell__bd{
  padding: 2px 0 2px 5px;
  color: #666;
}
.searchbar-result:before{
    display: none;
}

.plant-cards{
  display:flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
  margin:3px;
}
.plant {
  background-size: cover;
  background-position: center;
  height: 112px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 18px;
  font-weight: bold;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.1);
  border-radius: 5px;
  box-shadow: 0 0 8px rgba(0,0,0,0.3);
  width:120px;
  margin-bottom:10px;

}
.page__bd {
padding-bottom: 10px;
}


