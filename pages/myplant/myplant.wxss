/* pages/myplant/myplant.wxss */
.plant-page {
  background-color:rgb(240,240,240);
  height:100vh;
}
.profile-pic {
  width:100vw;
  display:flex;
  justify-content: center;
  margin-top:20px;

}

.fas {
  font-size:30px;
}
.card {
  display: flex;
  align-items: center;
  width:100%;
  justify-content: space-between;
  padding:15px;
}
.card-product {
  overflow: hidden;
  height: 400px;
  padding:40px;
  background: white;
  box-shadow: 0 0 10px rgba(0,0,0,0.1);
  display: flex;
  align-items: center;
  margin-top: 20px;
  flex-direction: column;
}

.card-product image {
  height: 100%;
  width: 120px;
  object-fit: cover;
}

.card-product .h2 {
  font-size: 16px;
  font-weight: bold;
  margin: 0;
}

.card-product .p {
  font-size: 14px;
  line-height: 1.4;
  opacity: .7;
  margin-bottom: 0;
  margin-top: 8px;
}

.card-product .card-product-infos {
  padding: 10px;
  width:180px;
}

.card-category {
  background-size: cover;
  background-position: center;
  height: 180px;
  width:180px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 24px;
  font-weight: bold;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
  border-radius: 50%;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
}
