/* pages/myplants/myplants.wxss */
.fa-frown {
color:red;
}

.fa-smile-beam {
 color:#0edf92;
}
.plant-image {
  height:148px;
  border-top-left-radius: 8px;
  border-top-right-radius: 8px;
  display:flex;
  justify-content: center;
  align-items: center;
  background-size: cover;
  background-position: center;

}

.myplants-page {
  height:100vh;
  width:100vw;
}
.plant-name {
  font-size:40px;
  color:white;
  font-family: Georgia,serif sans-serif;
  font-weight: bold;
  opacity:0.5;

}
.header-flex {
  display:flex;
  justify-content: center;
}
.fa-baby-carriage {
  color:white;
  /* color:#1CE2A7; */
  font-size:40px;
  opacity:0.9;

}
.plusaplant {
  display:flex;
  justify-content: center;
  align-items: center;

}
.plus {
  height:210px;
}
.header {
  background-size: cover;
  background-position: center;
  height:100px;
  /* border-bottom: 1px dotted rgb(200,200,200); */
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-weight:medium;
  width:80%;

  
}
.header-bar {
   /* color:#1CE2A7; */
  color:white;
  font-size:14px;
  font-family:raleway;
  margin:8px;
}
.container {
  height:80vh;
  width:100%;
  justify-content: space-evenly;
  display:grid;
  grid-template-columns: 40vw 40vw;
  grid-gap: 8px;
  background-color: white;
  padding:10px;
  margin:16px auto;
 
}
.cards {
  background-size: cover;
  box-shadow: 0 0 10px rgb(0,0,0,0.1);
  border-radius:8px;
  font-weight: medium;

}

.cards image {
  max-width: 40vw;
  max-height: 35vw;
  border-top-left-radius:8px;
  border-top-right-radius:8px;
}

.card-trip-infos{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: white;
  height:100%;
  padding:0px;
}

.fa-comments {
  color:#0edf92;
  font-size:32px;
  margin:5px;
}
.icons {
  display:flex;
  justify-content: space-between;
  align-items: center;
  margin:7px;
  width:70%;
  height:32px;
  font-size:30px;
  padding:8px;

}
